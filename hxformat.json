{
	"indentation": {
		"tabWidth": 2
	},
	"sameLine": {
		"ifBody": "same",
		"elseBody": "same",
		"ifElse": "keep",
		"comprehensionFor": "keep"
	},
	"wrapping": {
		"maxLineLength": 90,
		"arrayMatrixWrap": "matrixWrapNoAlign",
